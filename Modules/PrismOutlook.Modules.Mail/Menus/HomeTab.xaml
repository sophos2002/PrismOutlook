<MenuItem x:Class="PrismOutlook.Modules.Mail.Menus.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PrismOutlook.Modules.Mail"
             xmlns:ig="http://schemas.infragistics.com/xaml/wpf"
             Header="Mail">

    <MenuItem Header="New">
        <MenuItem Header="New Email" Command="{Binding NewMessageCommand}" CommandParameter="New"/>
    </MenuItem>
    <MenuItem Header="Delete">
        <MenuItem Header="Delete" Command="{Binding DeleteMessageCommand}" />
    </MenuItem>
    <MenuItem Header="Respond">
        <MenuItem Header="Reply" Command="{Binding MessageCommand}" CommandParameter="Reply" />
        <MenuItem Header="ReplyAll" Command="{Binding MessageCommand}" CommandParameter="ReplyAll" />
        <MenuItem Header="Forward"  Command="{Binding MessageCommand}" CommandParameter="Forward" />
    </MenuItem>

</MenuItem>
